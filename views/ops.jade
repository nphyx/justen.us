  head
    title Ops
    meta(name="description" title="A puzzle game.")
    meta(charset="UTF-8")
    meta(property="og:title" content="Ops")
    meta(property="og:image" content="http://justen.us/media/ops-screenshot.png")
    meta(property="og:url" content="http://justen.us/ops")
    link(rel="icon" href="media/ops.ico" type="image/x-icon")
    link(rel="stylesheet" type="text/css" href="styles/ops.css")
    script(src="scripts/ops.js" type="text/javascript")
